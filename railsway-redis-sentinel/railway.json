{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "params": {
        "REDIS_PASSWORD": {
            "label": "Redis Password",
            "description": "Password for Redis and Sentinel authentication",
            "config": {
                "length": 32
            }
        },
        "SENTINEL_QUORUM": {
            "label": "Sentinel Quorum",
            "description": "Number of sentinels needed to elect a master",
            "defaultValue": "2"
        }
    },
    "services": {
        "redis-node-1": {
            "name": "redis-node-1",
            "icon": "https://raw.githubusercontent.com/railwayapp-templates/redis/master/icon.png",
            "variables": {
                "REDIS_PASSWORD": "${{REDIS_PASSWORD}}",
                "SENTINEL_QUORUM": "${{SENTINEL_QUORUM}}",
                "INITIAL_MASTER_HOST": "${{ redis-node-1.RAILWAY_INTERNAL_HOSTNAME }}"
            },
            "volumes": {
                "/data": {}
            }
        },
        "redis-node-2": {
            "name": "redis-node-2",
            "icon": "https://raw.githubusercontent.com/railwayapp-templates/redis/master/icon.png",
            "variables": {
                "REDIS_PASSWORD": "${{REDIS_PASSWORD}}",
                "SENTINEL_QUORUM": "${{SENTINEL_QUORUM}}",
                "INITIAL_MASTER_HOST": "${{ redis-node-1.RAILWAY_INTERNAL_HOSTNAME }}"
            },
            "volumes": {
                "/data": {}
            }
        },
        "redis-node-3": {
            "name": "redis-node-3",
            "icon": "https://raw.githubusercontent.com/railwayapp-templates/redis/master/icon.png",
            "variables": {
                "REDIS_PASSWORD": "${{REDIS_PASSWORD}}",
                "SENTINEL_QUORUM": "${{SENTINEL_QUORUM}}",
                "INITIAL_MASTER_HOST": "${{ redis-node-1.RAILWAY_INTERNAL_HOSTNAME }}"
            },
            "volumes": {
                "/data": {}
            }
        }
    }
}